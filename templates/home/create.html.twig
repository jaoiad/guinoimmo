	<div class="form-group">
		<div class="col-10">
			{% if editMode %}
				<h1>{{message1}}</h1>
			{% else %}
				<h1>{{message2}}</h1>
			{% endif %}

			{{form_start(FormAnnonce)}}
			<div class="col-md-4">{{form_row(FormAnnonce.type_maison)}}</div>
