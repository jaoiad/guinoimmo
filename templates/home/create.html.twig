			<div class="col-md-4">{{form_row(FormAnnonce.categories)}}</div>
			<div class="col-md-4">{{form_row(FormAnnonce.imageFile)}}</div>
		

{{form_rest(FormAnnonce)}}



			<button type="submit" class="btn btn-success">
				{% if editMode %}
					Enregistrer les modifications
				{% else %}
					Ajouter une Location
				{% endif %}
			</button>
		</div>
		{{form_end(FormAnnonce)}}

	</div>
