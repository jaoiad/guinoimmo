{% extends 'base.html.twig' %}

{% block title %}Guinot-immobilier{% endblock %}

{% block body %}
    <div class = "jumbotron">
        <br> GUINOT IMMOBILIER:</br>
        <br> ACCESS LOCATION & VENTE D'APPARTEMENTS</br>
    </div>


<div class="container">

{# Liste de ce que j'aimerai afficher#}
<div class = "row">
     {% for location in annonce %}     
          <resume>
               {# Faisant une interpollation#}
               <h4>categorie: {{ location.categorie }}</h4>
               <p> Date de publication: {{ location.creatAt | date('d/m/Y')}}</p>
               <div class = "content">
                    <img align="justify"src="{{ location.image}}" alt=""  align="left">
                    <p align="justify"> {{ location.denomination | raw}}  </p>
                    <p align="justify"> Adresse: {{ location.adresse | raw}} </p> 
                    <p align="justify"> Surface: {{ location.surface | raw}} </p> 
                    <p align="justify"> Type: {{ location.typemaison | raw}} </p> 
                    <p align="justify"> Chambres: {{ location.chambres | raw}} </p>
                    <p align="justify"> Etage: {{ location.etage | raw}} </p>
                    <p align="justify"> Prix du bien : {{ location.cout | raw}} </p>    
                    <a href="{{ path('affichage', {'id': location.id })}}" class="btn btn-primary"> Consulter</a>  
                      
                      

               </div>          
          </resume>
          <hr> </hr>
     {% endfor %} 
</div>


 <div class="pagination">
        {{ knp_pagination_render(annonce) }}
    </div>





{% endblock %}