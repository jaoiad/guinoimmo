{% extends 'base.html.twig' %}

{% block title %}Guinot-immobilier{% endblock %}

{% block body %}
    <div class = "jumbotron">
        <br> GUINOT IMMOBILIER:</br>
        <br> ACCESS LOCATION & VENTE D'APPARTEMENTS</br>
    </div>


<div class="container">

{# Liste de ce que j'aimerai afficher#}
<div class = "row">
     {% for zepi in annonce %}     
          <resume>
               {# Faisant une interpollation#}
               <h5>categorie / {{ zepi.title }}</h5>
               <p> Date de publication: {{ zepi.createAt | date('d/m/Y')}}</p>
               <div class = "content">
                    <img src="{{ zepi.image}}" alt=""  align="left">
                    <p align="justify"> {{ zepi.content | raw}}   </p> 
                    <a href="{{ path('affichage', {'id': zepi.id })}}" class="btn btn-primary"> Consulter</a>  
                    <a href="{{path('ann_edit', {'id':zepi.id})}}" class="btn btn-success"> modifier</a>  
                    <a href="{{path ('ann_delete',{'id':zepi.id})}}" class="btn btn-danger"> supprimer</a>  

               </div>          
          </resume>
          <hr> </hr>
     {% endfor %} 
</div>


 <div class="pagination">
        {{ knp_pagination_render(annonce) }}
    </div>





{% endblock %}