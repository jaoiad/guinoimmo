
<a {% for attr, value in options | merge ({class: 'btn btn-warning'} ) %} {{ attr }}="{{ value }}" {% endfor %}>

	<span class="float-right">
		{% if sorted %}
			{% if direction == 'desc' %}
<i class="fas fa-angle-down"></i>

			{% else %}
<i class="fas fa-angle-up"></i>

			{% endif %}
		{% else %}
			<i class="fa fa-sort"></i>
		{% endif %}
	</span>
	{{ title }}
</a>

